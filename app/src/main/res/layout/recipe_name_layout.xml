<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recipe_name_margin"
    android:orientation="vertical"
    android:padding="@dimen/recipe_name_padding">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_name_card_view_height"
        card_view:cardCornerRadius="@dimen/card_view_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/baking_app_primary_color">

            <ImageView
                android:id="@+id/recipe_image_view_id"
                android:layout_width="@dimen/recipe_image_view_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/recipe_name_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/baking_app_text_color" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>