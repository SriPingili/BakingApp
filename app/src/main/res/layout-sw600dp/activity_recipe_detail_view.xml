<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tablet_view_linear_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baking_app_background"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/steps_container_id"
        android:layout_width="@dimen/frame_layout_width_tablet"
        android:layout_height="match_parent" />

    <View
        android:layout_width="@dimen/view_separator_width_tablet"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/ingredients_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/steps_containerr_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>